<extension version="2.5" type="plugin" group="vmcustom" method="upgrade">
    <name>Stockable Customfields</name>
    <creationDate>2015-01-20</creationDate>
  	<author>breadkesigns</author>
	<authorEmail>info@breakdesigns.net</authorEmail>
	<authorUrl>http://www.breakdesigns.net</authorUrl>
	<copyright>Copyright(c) 2014 breakdesigns.net</copyright>
	<license>GNU/GPL v.2</license>
    <version>1.0</version>
     <description><![CDATA[<h3>Stockables Customfields<i style="font-size:12px">(v.1.0 | 20 January 2014)</i></h3>
    <span><img src="../plugins/vmcustom/stockablecustomfields/assets/images/logo_90.png"/></span>
    <p style="margin-top:5px; font-size:12px; font-weight:0;">Stockable Custom Fields for Virtuemart</p>
    <p><a href="http://breakdesigns.net/extensions/customfields-for-all/manual#installation" target="_blank">Please check our Manual to see how to proceed further</a>
    ]]></description>

     <install>
		<sql>

		</sql>
	</install>

    <uninstall> <!-- Runs on uninstall -->
		<sql>

		</sql>
	</uninstall>

	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>

		</schemas>
	</update>

    <files>
        <filename plugin="stockablecustomfields">stockablecustomfields.php</filename>
        <filename>index.html</filename>
        <folder>assets</folder>
        <folder>stockablecustomfields</folder>
    </files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_vmcustom_stockablecustomfields.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_vmcustom_stockablecustomfields.sys.ini</language>
	</languages>
	<config>
	<fields name="params">
		<fieldset name="basic" addfieldpath="/plugins/vmcustom/stockablecustomfields/fields">
			<field type="customs" name="custom_id" label="PLG_STOCKABLECUSTOMFIELDS_CUSTOMS_LABEL" description="PLG_STOCKABLECUSTOMFIELDS_CUSTOMS_DESC"/>
		</fieldset>
	</fields>
	</config>

     <plugins>
        <plugin plugin="stockablecustomfields" group="vmcustom" />
     </plugins>

   <templateoverrides>
        <templateoverride name="com_virtuemart" client="administrator"></templateoverride>
   </templateoverrides>
</extension>